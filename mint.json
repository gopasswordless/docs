{
  "$schema": "https://mintlify.com/schema.json",
  "name": "GoPasswordless",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://gopasswordless.dev"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#2CA9BC",
    "light": "#2CA9BC",
    "dark": "#2CA9BC",
    "anchors": {
      "from": "#117866",
      "to": "#2AB673"
    }
  },
  "api": {
    "auth": {
      "method": "bearer"
    }
  },
  "topbarLinks": [
    {
      "name": "Explore GoPasswordless",
      "url": "https://gopasswordless.dev"
    }
  ],
  "topbarCtaButton": {
    "name": "Start Free",
    "url": "https://app.gopasswordless.dev/auth/signup"
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true
  },
  "tabs": [
    {
      "name": "SDK Reference",
      "url": "sdk"
    }
  ],
  "navigation": [
    {
      "group": "Introduction",
      "pages": ["welcome", "quickstart", "examples"]
    },
    {
      "group": "Signup & Login",
      "pages": ["installation", "signup", "signin", "verification"]
    }
  ],
  "footerSocials": {
    "github": "https://github.com/gopasswordless",
    "twitter": "https://twitter.com/joebloxsome"
  },
  "analytics": {
    "plausible": {
      "domain": "docs.gopasswordless.dev"
    }
  }
}
